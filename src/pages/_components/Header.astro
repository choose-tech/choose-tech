---
import SimpleIconsGithub from "~icons/simple-icons/github";
---

<header class="sticky top-0 bg-gray-900/95 backdrop-blur z-30">
  <div class="mx-auto flex max-w-7xl items-center justify-between px-6 py-2 space-x-2">
    <a href="/" class="group select-none">
      <img
        src="/logo-lg.svg"
        alt=""
        class="h-12 transition-transform group-hover:scale-105"
      />
    </a>
    <div class="flex items-center space-x-2">
      <a
        href="https://github.com/choose-tech/choose-tech"
        target="_blank"
        class="button button-gray"
      >
        <SimpleIconsGithub />
        <span>GitHub</span>
      </a>
    </div>
  </div>
</header>
